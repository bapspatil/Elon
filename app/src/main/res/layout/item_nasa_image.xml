<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerRelativeLayout"
    style="@style/ItemNasaImageContainerStyle">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/nasaImageView"
            style="@style/ItemNasaImageViewStyle"
            tools:src="@drawable/loading_state" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bg" />
    </FrameLayout>

    <TextView
        android:id="@+id/titleTextView"
        style="@style/ItemNasaImageTitleTextViewStyle"
        tools:text="Hubble observes one of a kind image." />

    <TextView
        android:id="@+id/centerAndDateTextView"
        style="@style/ItemNasaImageCenterTextViewStyle"
        tools:text="GSFC  |  2014-02-13" />
</RelativeLayout>